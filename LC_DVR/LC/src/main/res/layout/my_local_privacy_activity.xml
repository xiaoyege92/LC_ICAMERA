<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@color/primary_dark"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableStart="@mipmap/back"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="本地隐私"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="2dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:background="@drawable/lc_white_circle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_back">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/assessment"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:gravity="center_vertical"
                    android:text="驾驶员姓名："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/driverName"
                    android:layout_toRightOf="@+id/assessment"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="11sp"
                    android:hint="请输入驾驶员姓名" />
                <View
                    android:layout_width="152dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/driverName"
                    android:layout_toRightOf="@+id/assessment"
                    android:background="@color/gray_back">

                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/close_date"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:gravity="center_vertical"
                    android:text="联 系 方 式 ："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/driverPhone"
                    android:layout_toRightOf="@+id/close_date"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:hint="请输入驾驶员联系方式"/>
                <View
                    android:layout_width="152dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/driverPhone"
                    android:layout_toRightOf="@+id/close_date"
                    android:background="@color/gray_back">

                </View>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/close_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="38dp"
                    android:gravity="center_vertical"
                    android:text="车 牌 号 码 ："
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/plateNumber"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/close_money"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入车牌号码"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="152dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/plateNumber"
                    android:layout_toRightOf="@+id/close_money"
                    android:background="@color/gray_back">

                </View>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/lc_white_circle"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="66dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/frameNumber"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/frame_number"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchFrameNumber"
                        android:visibility="gone"
                        android:layout_marginLeft="80dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_below="@+id/frameNumber"
                        android:text="车架号照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/drivingLicense"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/driving_license"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchDrivingLicense"
                        android:visibility="gone"
                        android:layout_marginLeft="68dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_below="@+id/drivingLicense"
                        android:text="行驶证照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/driverLicense"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/driver_license"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchDriverLicense"
                        android:visibility="gone"
                        android:layout_marginLeft="68dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9sp"
                        android:layout_below="@+id/driverLicense"
                        android:text="驾驶证照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/bank"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/bank"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchBank"
                        android:visibility="gone"
                        android:layout_marginLeft="68dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_below="@+id/bank"
                        android:ems="5"
                        android:text="被保险人银行卡照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/IDPositive"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/id_positive"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchIDPositive"
                        android:visibility="gone"
                        android:layout_marginLeft="68dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:ems="6"
                        android:layout_below="@+id/IDPositive"
                        android:text="被保险人身份证正面照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/IDOpposite"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/id_opposite"
                        android:layout_width="56dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchIDOpposite"
                        android:visibility="gone"
                        android:layout_marginLeft="68dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9sp"
                        android:ems="6"
                        android:layout_below="@+id/IDOpposite"
                        android:text="被保险人身份证反面照片"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>