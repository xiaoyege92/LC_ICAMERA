<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@color/primary_dark"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableStart="@mipmap/back"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="赔付详情"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_payment"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/lc_white_circle"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="理赔资料"
                android:textSize="13sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_back">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/frameNumberPayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/frame_number"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchFrameNumberPayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/frameNumberPayment"
                        android:text="车架号照片"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/drivingLicensePayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/driving_license"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchDrivingLicensePayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/drivingLicensePayment"
                        android:text="行驶证照片"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/driverLicensePayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/driver_license"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchDriverLicensePayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_below="@+id/driverLicensePayment"
                        android:text="驾驶证照片"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/bankPayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/bank"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchBankPayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/bankPayment"
                        android:ems="6"
                        android:text="被保险人银行卡照片"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/IDPositivePayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/id_positive"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchIDPositivePayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/IDPositivePayment"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:ems="6"
                        android:gravity="center_horizontal"
                        android:text="被保险人身份证正面照片"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/dotted_line"
                        android:layout_width="68dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/IDOppositePayment"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/id_opposite"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/switchIDOppositePayment"
                        android:visibility="gone"
                        android:layout_marginLeft="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/switch_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:ems="6"
                        android:layout_below="@+id/IDOppositePayment"
                        android:text="被保险人身份证反面照片"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/lc_white_circle"
        android:layout_below="@+id/rl_payment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="定损理赔"
                android:textSize="13sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_back">
        </View>
        <LinearLayout
            android:id="@+id/ll_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="定损日期："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_date"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/assessment"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="2018-11-14 17:35:30"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment_money"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="定损金额："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_money"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/assessment_money"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_dark"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_assessment_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:text="元"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/close_date"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="结案日期："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_close_date"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/close_date"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="2018-11-14 17:35:30"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/close_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:text="结案金额："
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_close_money"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/close_money"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:textSize="13sp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_close_money"
                    android:layout_centerVertical="true"
                    android:text="元"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_failure"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment_failure"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="定损日期："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_date_failure"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/assessment_failure"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="2018-11-14 17:35:30"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment_money_failure"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="定损失败原因类型："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_money_failure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/assessment_money_failure"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/close_date_failure"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="定损失败原因："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_close_date_failure"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/close_date_failure"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_dropped"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment_dropped"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="销案日期："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_date_dropped"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/assessment_dropped"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="2018-11-14 17:35:30"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/assessment_money_dropped"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="销案原因类型："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_assessment_money_dropped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/assessment_money_dropped"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/close_date_dropped"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="销案原因："
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_close_date_dropped"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/close_date_dropped"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_payment_upload"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="5dp"
            style="@style/TvNextButton2"
            android:text="一键上传"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>
</RelativeLayout>