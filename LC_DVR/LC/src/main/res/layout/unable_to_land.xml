<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_gray"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/help_radius"
        android:layout_width="283dp"
        android:layout_height="228dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/servicePhone"
                android:textColor="@color/black"
                android:text="单位电话"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/serviceTime"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:textColor="@color/xian_color"
            android:text="单位时间"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="160dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <Button
                android:onClick="closePHelpPage"
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                android:text="@string/quxiao"
                android:background="@drawable/textview_button_selector_gray"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />
            <Button
                android:onClick="goDialing"
                android:text="@string/dialing"
                style="@style/TvNextButton"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>