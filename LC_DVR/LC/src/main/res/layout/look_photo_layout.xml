<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@color/primary_dark"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableStart="@mipmap/back"
                android:onClick="closeLookPhoto"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tvWhichImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:text="@string/personalInformationPhoto"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />

            <RadioButton
                android:id="@+id/photo_delete_btn"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableEnd="@mipmap/delete_lc"
                android:onClick="deleteImage"
                />
        </RelativeLayout>

    </RelativeLayout>

    <com.example.administrator.lc_dvr.module.lc_report.MatrixImageView
        android:id="@+id/personalInformationImage"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>