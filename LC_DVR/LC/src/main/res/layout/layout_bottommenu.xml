<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/theme_background2"
    >
    <com.example.administrator.lc_dvr.common.customview.BadgeView
        android:id="@+id/badgeView"
        android:text="1"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:id="@+id/ivmenu"/>
    <TextView
        android:layout_below="@+id/ivmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="赚钱"
        android:textColor="@color/alphablack"
        android:id="@+id/tvmenu"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/iv_red_circler"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_circler"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"/>
</RelativeLayout>