<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@color/primary_dark"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="closeOnlineSurvey2"
                android:button="@null"
                android:drawableStart="@mipmap/back"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/onlineSurvey"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/theme_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/report"
                android:onClick="onlineSurveySelector"
                android:background="@color/primary_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_report"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="报案"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/report_selector"
                    android:layout_width="33dp"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/tv_report"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:background="@color/white" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/reportPhoto"
                android:onClick="onlineSurveySelector"
                android:background="@color/primary_dark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_take_photo"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:text="拍照"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_take_photo"
                    android:layout_marginTop="4dp"
                    android:id="@+id/reportPhoto_selector"
                    android:layout_width="33dp"
                    android:layout_height="1.5dp"
                    android:background="@color/white" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onlineSurvey2_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </RelativeLayout>

</LinearLayout>