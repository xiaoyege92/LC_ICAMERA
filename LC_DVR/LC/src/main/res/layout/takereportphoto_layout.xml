<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:background="@color/primary_dark"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableStart="@mipmap/back"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/takeReportPhotoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="被撞物体照片"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/takePhotoTip1"
        android:text="请按照以下示意图拍摄您的被撞物体照片"
        android:textSize="13sp"
        android:layout_margin="22dp"
        android:textColor="@color/xian_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/takePhotoCar"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/take_report_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/takePhotoTip2"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"
        android:text="如果撞比较大的物体，要拍到被撞击物的外观及整体照片，而不能只拍被撞部位的局部"
        android:textSize="13sp"
        android:textColor="@color/xian_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="takePhotoTap"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/TvNextButton2"
        android:text="开始拍照"
        android:textColor="#fff"
        android:textSize="17sp" />

</LinearLayout>