<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_report_success"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="136dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/register_success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="21sp"
            android:text="提交成功"/>
    </LinearLayout>

    <TextView
        android:id="@+id/report_sucess_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_report_success"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textColor="#666666"
        android:textSize="12sp"
        android:text="您已成功进行第N次评价！"/>



    <LinearLayout
        android:layout_below="@id/serviceName"
        android:layout_marginTop="288dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_look_case"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:text="查看案件"
            style="@style/TvNextButton"
            android:textSize="10sp"
            android:layout_width="100dp"
            android:layout_height="29dp" />
        <Button
            android:id="@+id/btn_return_main"
            android:text="返回首页"
            android:background="@drawable/textview_button_selector_gray"
            android:textColor="@color/primary_dark"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:textSize="10sp"
            android:layout_width="100dp"
            android:layout_height="29dp" />
    </LinearLayout>


</RelativeLayout>