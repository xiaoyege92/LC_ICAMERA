<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_gray"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/help_radius"
        android:layout_width="283dp"
        android:layout_height="266dp"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/serviceAddress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:textColor="@color/black"
            android:text="单位名称"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/serviceTime"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@+id/serviceAddress"
            android:layout_marginTop="10dp"
            android:textColor="@color/bottom_text"
            android:text="9:00-18:00"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_servicephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/serviceTime"
                android:layout_marginTop="34dp"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="021-56060088" />

        <TextView
            android:id="@+id/serviceName"
            android:layout_below="@+id/tv_servicephone"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:text="陈东"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@id/serviceName"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <Button
                android:onClick="closeReportHelp"
                android:textColor="@color/primary_dark"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:text="@string/quxiao"
                android:background="@drawable/textview_button_selector_gray"
                android:textSize="12dp"
                android:layout_width="86dp"
                android:layout_height="29dp" />
            <Button
                android:onClick="takeServicePhone"
                android:text="@string/dialing"
                style="@style/TvNextButton"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_width="86dp"
                android:layout_height="29dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>