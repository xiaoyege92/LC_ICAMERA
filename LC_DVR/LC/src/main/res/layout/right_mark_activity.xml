<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_gray"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/help_radius"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <com.example.administrator.lc_dvr.common.customview.RightMarkView
            android:id="@+id/rightMarkView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rightMarkView"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/land_btn_login"
            android:textColor="@color/black"
            android:text="您已成功注册！"/>

    </RelativeLayout>

</RelativeLayout>