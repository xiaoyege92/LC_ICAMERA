<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 (内容会居中显示并靠左右有距离)-->
        <item name="android:windowIsFloating">false</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="accident_back_gray">
        <item name="android:background">@color/gray_back</item>
        <item name="android:textColor">@color/normal_black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="black_12sp_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/normal_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gray_12sp_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="gray_10sp_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/bottom_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="blue_12sp_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TvNextButton">
        <item name="android:background">@drawable/textview_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3e3a39</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TvNextButton2">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3e3a39</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_editStyle">
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">47dp</item>
        <item name="android:background">@mipmap/bg_verify</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
